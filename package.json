{
    "name": "chocolate-bars",
    "version": "0.0.0-semantically-released",
    "description": "Present histograms (bars!) of images in a directory, including extras such as exif data from the camera.",
    "keywords": [
        "image",
        "histogram",
        "image viewer",
        "image-viewer",
        "photo",
        "photo viewer",
        "photo-viewer",
        "viewer"
    ],
    "main": "dist/chocolate-bars.umd.js",
    "module": "dist/chocolate-bars.es5.js",
    "typings": "dist/types/chocolate-bars.d.ts",
    "files": [
        "dist"
    ],
    "author": "str <str_ie@yahoo.co.uk>",
    "bin": {
        "chocolate-bars": "./dist/lib/cli.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mrseanryan/chocolate-bars.git"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8.3.0"
    },
    "scripts": {
        "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "lint:local": "tslint  --project tsconfig.json -t codeFrame",
        "prebuild": "rimraf dist",
        "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src && yarn build:extra",
        "build:extra": "yarn build:cli && yarn build:static",
        "build:cli": "echo #!/usr/bin/env node > dist/lib/cli.js && cat dist/lib/main.js >> dist/lib/cli.js && chmod +x dist/lib/cli.js",
        "build:minimal": "tsc --module commonjs && yarn build:extra",
        "build:minimal:watch": "tsc --module commonjs -w",
        "build:static": "yarn build:static:html && yarn build:static:images",
        "build:static:html": "cp static/electronApp/index.html ./dist/lib/electronApp && cp node_modules/histogram/histogram.min.js ./dist/lib/electronApp && cp node_modules/plotly.js/dist/plotly.min.js ./dist/lib/electronApp",
        "build:static:images": "cp static/electronApp/images/* ./dist/lib/electronApp",
        "build-and-test": "yarn build:minimal && yarn test",
        "log:dist": "ls dist -lR",
        "preinstall": "npm run build:cli",
        "start:rollup": "rollup -c rollup.config.ts -w",
        "start": "npm run build:minimal && electron ./dist/lib/electronApp/appMain.js",
        "start:watch": "yarn build:minimal:watch",
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "test:prod": "npm run build && npm run lint && npm run test -- --no-cache",
        "deploy-docs": "ts-node tools/gh-pages-publish",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "commit": "git-cz",
        "semantic-release": "semantic-release",
        "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
        "precommit": "lint-staged",
        "travis-deploy-once": "travis-deploy-once",
        "prepush": "npm run test:prod && npm run lint:local"
    },
    "lint-staged": {
        "{src,test}/**/*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/itest/",
            "/node_modules/",
            "/static/",
            "/test/",
            "/testUtils/",
            "/tools/",
            "main.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "src/chocolate-bars.ts"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": false
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^7.1.2",
        "@commitlint/config-conventional": "^7.1.2",
        "@types/cli-color": "^0.3.29",
        "@types/jest": "^23.3.2",
        "@types/jquery": "^3.3.28",
        "@types/node": "^10.11.0",
        "@types/yargs": "^12.0.1",
        "commitizen": "^3.0.0",
        "coveralls": "^3.0.2",
        "cross-env": "^5.2.0",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^1.0.1",
        "jest": "^23.6.0",
        "jest-config": "^23.6.0",
        "lint-staged": "^8.0.0",
        "lodash.camelcase": "^4.3.0",
        "prettier": "^1.14.3",
        "prompt": "^1.0.0",
        "replace-in-file": "^3.4.2",
        "rimraf": "^2.6.2",
        "rollup": "^0.68.0",
        "rollup-plugin-commonjs": "^9.1.8",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.18.0",
        "semantic-release": "^15.13.1",
        "travis-deploy-once": "^5.0.11",
        "ts-jest": "^23.10.2",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-config-standard": "^8.0.1",
        "typedoc": "^0.13.0",
        "typescript": "^3.0.3"
    },
    "dependencies": {
        "cli-color": "^1.4.0",
        "colors": "^1.3.2",
        "electron": "^4.0.0",
        "histogram": "^3.0.1",
        "image-size": "^0.6.3",
        "jquery": "^3.3.1",
        "plotly.js": "^1.43.1",
        "sharp": "^0.21.1"
    }
}
